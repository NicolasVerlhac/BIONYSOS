<div class="banner-2" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1558241665-f0512695d322?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2535&q=80);">
  <div class="container">
    <h1>Nos vignerons partenaires</h1>
  </div>
</div>
<div class="container">
  <div class='d-flex'>
      <div class="row">
        <% @vignerons.each do |vigneron| %>
          <div class="col-sm-6">
            <div class=''>
            <%= link_to vigneron_path(vigneron) do %>
            <div class="card-trip card-trip-margin">
                <%= cl_image_tag vigneron.domain_photo.key, crop: :fill %>
                  <div class="card-trip-region <%= vigneron.region %>">
                    <p><%= vigneron.region %></p>
                  </div>
              <div class="card-trip-infos">
                <div>
                  <h3> <strong><%= vigneron.first_name %> <%= vigneron.last_name %></strong>  - <i><%= vigneron.domain_name %></i> </h3>
                  <p><%= vigneron.description.first(140) %> ...</p>
                  <%= image_tag url_for(vigneron.avatar), class: 'card-trip-vigneron avatar-bordered' %>
                </div>
              </div>
            </div>
          </div>
        </div>
           <% end %>
         <% end %>
      </div>
  <div class='row'>
    <div
      id="map"
      style="width: 350px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    </div>
  </div>
</div>
