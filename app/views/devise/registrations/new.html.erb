<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 form-sign">

<ul class="list-inline tabs-underlined">
  <li>
    <a href="#mon_ancre_1" class="tab-underlined active">Compte</a>
  </li>
  <li>
    <a href="#mon_ancre_2" class="tab-underlined">Goûts</a>
  </li>
  <li>
    <a href="#mon_ancre_3" class="tab-underlined">Caractéristiques</a>
  </li>
</ul>



        <div class=" p-4 m-3"><h2 id="mon_ancre_1">Création de compte</h2></div>



          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-input">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" } %>

              </div>
              <div class="row">

                <div class="col-xs-6 p-3"><%= f.input :first_name, required: true %></div>
                <div class="col-xs-6 p-3"><%= f.input :last_name, required: true %></div>
              </div>


            <p id="mon_ancre_2">Quelle couleur de vin aimez-vous ?</p>
              <div class="flex-row">
              <div class="category_choices flex-row">
                <div class="category_choice"><%= f.input :color_red, as: :boolean, label: "vin rouge", input_html: { class: 'd-none' } %></div>
                <div class="category_choice"><%= f.input :color_white, as: :boolean, label: "vin blanc", input_html: { class: 'd-none' } %></div>
                <div class="category_choice"><%= f.input :color_rose, as: :boolean, label: "vin rosé", input_html: { class: 'd-none' } %></div>
              </div>
            </div>

            <p> Quelle région ?</p>

              <div class="category_choices">
                <div class="category_choice"><%= f.input :region_alsace, as: :boolean, label: "Alsace", input_html: { class: 'd-none' } %></div>
                <div class="category_choice"><%= f.input :region_bordeaux, as: :boolean, label: "Bordeaux", input_html: { class: 'd-none' }  %></div>
                <div class="category_choice"><%= f.input :region_rhone, as: :boolean, label: "Rhone", input_html: { class: 'd-none' }  %></div>
                <div class="category_choice"><%= f.input :region_bourgogne, as: :boolean, label: "Bourgogne", input_html: { class: 'd-none' } %></div>
                <div class="category_choice"><%= f.input :region_loire, as: :boolean, label: "Loire", input_html: { class: 'd-none' } %></div>
              </div>

            <p> Quelle type de vin ?</p>

              <div class="category_choices">
                  <div class="category_choice"><%= f.input :classification_biodynamique, as: :boolean, label: "Biodynamique", input_html: { class: 'd-none' } %></div>
                  <div class="category_choice"><%= f.input :classification_naturel, as: :boolean, label: "Naturel", input_html: { class: 'd-none' } %></div>
              </div>

            <p> Plutôt léger ou corsé ?</p>
              <div class="category_choices">
                  <div class="category_choice"><%= f.input :alcool_light, as: :boolean, label: "Léger", input_html: { class: 'd-none' } %></div>
                  <div class="category_choice"><%= f.input :alcool_strong, as: :boolean, label: "Corsé", input_html: { class: 'd-none' } %></div>
              </div>


            <p id="mon_ancre_3"> Caractéristiques ?</p>
              <div class="category_choices">


                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_leger, as: :boolean, label: "Léger", input_html: { class: 'd-none' } %></div>
                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_puissant, as: :boolean, label: "Puissant", input_html: { class: 'd-none' } %></div>


                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_fruite, as: :boolean, label: "Fruité", input_html: { class: 'd-none' } %></div>
                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_tannique, as: :boolean, label: "Tannique", input_html: { class: 'd-none' } %></div>


                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_sec, as: :boolean, label: "Sec", input_html: { class: 'd-none' } %></div>
                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_sucre, as: :boolean, label: "Sucré", input_html: { class: 'd-none' } %></div>


                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_mineral, as: :boolean, label: "Minéral", input_html: { class: 'd-none' } %></div>
                <div class="category_choice_caracteristic d-inline-block"><%= f.input :vin_fruite, as: :boolean, label: "Fruité", input_html: { class: 'd-none' } %></div>
              </div>



                <%= f.button :submit, "Créer mon compte", class:"btn btn-primary" %>


            <% end %>

            <%= render "devise/shared/links" %>

    </div>



  </div>
</div>
