
  <div class="row">

    <div class="col col-lg-3">
      <p class="card-title"><%= @wines[0].name %></p>
      <h5 class="card-text"><%= @wines[0].regionclassification %></h5>
      <%= cl_image_tag @wines[0].wine_photo.key, :height=>200, :crop=>"scale" %>

    </div>

    <div class="col col-lg-3">
          <p class="card-title"><%= @wines[1].name %></p>
          <h5 class="card-text"><%= @wines[1].regionclassification %></h5>
          <%= cl_image_tag @wines[1].wine_photo.key, :height=>200, :crop=>"scale" %>
    </div>

  </div>


  <div class="row">
    <% @wines[2..-1].each do |wine|  %>
    <div class="col col-lg-2">
    <p><%= wine.name %></p>
    <h5><%= wine.regionclassification %></h5>
    <%= cl_image_tag wine.wine_photo.key, :height=>200, :crop=>"scale" %>
    </div>
    <% end %>
  </div>



